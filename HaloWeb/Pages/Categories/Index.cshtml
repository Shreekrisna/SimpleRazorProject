@page
@model HaloWeb.Pages.Categories.IndexModel

@if(TempData["success"]!=null)
{
        
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script type="text/javascript">
       toastr.success('@TempData["success"]'); 
    </script>
    
}

<div class="contianer p-3">
    <div class="row mt-3">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="create" class="btn btn-primary text-black">
               <i class="bi bi-plus-square"></i> &nbsp; Create New Category
            </a>
        </div>
    </div>
    <br />
    
    <table class="table table-bordered table-striped"style="width:100%">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Display Order</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
         @foreach(var obj in Model.Categories)
         {
                <tr>
                    <td width="40%">@obj.Name</td>
                    <td width="30%">@obj.DisplayOrder</td>
                    <td>
                        <a asp-page="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i> &nbsp;Edit
                        </a>

                          <a asp-page="Delete"asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash"></i> &nbsp;Delete
                        </a>
                    </td>
                </tr>
         }
        </tbody>
    </table>



  
</div>
